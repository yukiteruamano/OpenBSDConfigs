"languageserver": {
  "bash": {
    "command": "bash-language-server",
    "args": ["start"],
    "filetypes": ["sh"]
  },
 "clangd": {
    "command": "clangd",
    "clangd.semanticHighlighting": true,
    "diagnostic.refreshOnInsertMode": true,
    "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
    "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
  }
}
